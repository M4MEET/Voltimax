{% sw_extends '@Storefront/storefront/page/checkout/finish/finish-details.html.twig' %}

{% block base_head %}
    {{ parent() }}
    
    {% block voltimax_checkout_finish_scripts %}
        {# Voltimax Checkout Finish Scripts - Only load on order confirmation page #}
        
        {# Checkout Script 1 - Conversion Tracking (Order Complete) #}
        {% if theme_config('voltimaxCheckoutScript1Active') and theme_config('voltimaxCheckoutScript1') %}
            {{ theme_config('voltimaxCheckoutScript1')|raw }}
        {% endif %}
        
        {# Checkout Script 2 - Enhanced E-commerce (Purchase Event) #}
        {% if theme_config('voltimaxCheckoutScript2Active') and theme_config('voltimaxCheckoutScript2') %}
            {{ theme_config('voltimaxCheckoutScript2')|raw }}
        {% endif %}
        
        {# Checkout Script 3 - Order Confirmation/Thank You Page Specific #}
        {% if theme_config('voltimaxCheckoutScript3Active') and theme_config('voltimaxCheckoutScript3') %}
            {{ theme_config('voltimaxCheckoutScript3')|raw }}
        {% endif %}
    {% endblock %}
{% endblock %}

{% block page_checkout_finish_details_inner %}
    {{ parent() }}
    <script>
        var value = {{ page.order.positionPrice }}{% for item in page.order.lineItems.elements %}+(-1 *{{ item.price.calculatedTaxes.amount|number_format(2) }}){% endfor %};
        soluteConversionTracking({
            VALUE: value,
            ORDER_ID: "{{ page.order.orderNumber }}",
            FACTOR: "1",
            CT: "Shopware6",
        });

        function soluteConversionTracking(data) {
            var ttl = 1000 * 60 * 60 * 24 * 30;
            var a = localStorage.getItem("soluteclid");
            if (!a) return;
            var b = a.split(" ", 2);
            if (parseInt(b[0]) + ttl > (new Date()).getTime()) {
                var url = "https://cmodul.solutenetwork.com/conversion";
                url += "?val=" + encodeURIComponent(data.VALUE);
                url += "&oid=" + window.btoa(encodeURIComponent(data.ORDER_ID));
                url += "&factor=" + encodeURIComponent(data.FACTOR);
                url += "&url=" + encodeURIComponent(b[1]);
                url += "&ctsystem=" + encodeURIComponent(data.CT);
                var req = new XMLHttpRequest();
                req.open("GET", url);
                req.send();
            } else {
                localStorage.removeItem("soluteclid");
            }
        }
    </script>
{% endblock %}
