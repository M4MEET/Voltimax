    {% block voltimax_checkout_scripts %}
        {# Voltimax Checkout-Specific Scripts - Only load on checkout pages #}
        
        {# Checkout Script 1 - Conversion Tracking #}
        {% if theme_config('voltimaxCheckoutScript1Active') and theme_config('voltimaxCheckoutScript1') %}
